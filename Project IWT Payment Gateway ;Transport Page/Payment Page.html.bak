</div>
</div>
<script type="text/javascript">
var x = document.getElementById("ram");
var y = document.getElementById("sita");
var z = document.getElementById("btn");

function sitaaja(){
	y.style.left="-1333px";
	x.style.display="none";
	z.style.left="207px";
}
function ramaja(){
	y.style.left="0px";
	x.style.display="inline-block";
	z.style.left="0px";
}
</script>
</body>
</html>