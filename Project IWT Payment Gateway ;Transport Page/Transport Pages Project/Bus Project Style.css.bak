body{
	background-image: linear-gradient(to bottom left,orange,white,green);
	background-attachment: fixed;
	background-size: 100% 100%;
}
.main{
	height:600px;
}
.header{
	min-height: 100%;
	width: 100%;
	background-size: cover;
	position: relative;
}
nav{
	display: flex;
	padding: 2% 6%;
	justify-content:space-between;
	align-items: center;
	background-image: linear-gradient(black,red);
	

}
nav img{
	width: 400px;
}
.nav-links{
	flex: 1;
	text-align: right;
}
.nav-links ul li{
	display: inline-block;
	padding: 8px 12px;
	position: relative;
}
.nav-links ul li a{
	color: floralwhite;
	text-decoration: none;
	font-size: 20px;
}
.nav-links ul li::after{
	content: '';
	width: 0%;
	height: 2px;
	background: red;
	display: block;
	margin: auto;
	transition: .5s;
}
.nav-links ul li:hover::after{
	width: 100%;
}
.booking-form-box{
	background-image: linear-gradient(to bottom right,orange,white,green);
	width: 500px;
	border-width: 2px;
	border-radius: 30px 0px;
	border-style: solid;
	padding:30px 40px;
	margin-bottom: 50px;
	position: relative;
	top: 100px;
	left: 400px;
	box-shadow: 15px 15px 5px grey;
}
.radio-btn{
	margin: 15px 0;
	box-sizing: border-box;
	padding-bottom:5px;
    position: relative;
	top: -10px;
	text-align: center;
	left: -11px;
}
.radio-btn .btn{
	margin-left: 20px;
}
.radio-btn span{
	color: black;
	margin-right: 5px;
	font-size: 17px;	
}
.booking-form{
	padding: 0 20px 20px;
	position: relative;
	left: 20px;
}
.booking-form label{
	margin-bottom: 30px;
	margin-top: 20px;
	font-size: 17px;
	color: black;
}
input::placeholder{
	color: black;
}
.input-grp{
	width: 151px;
	display: inline-block;
	margin-right: 70px;
	margin-bottom: 15px;
}
.form-control{
	width: 120%;
	height: 30px;
	margin-top: 1px;
	background: transparent;
}
.custom-select{
	width: 120%;
	height: 30px;
	margin-top: 1px;
	background: transparent;
}
.btn-primary{
	width: 120%;
	height: 30px;
	margin-top: 1px;
	background: white; 
}
.btn-primary:hover{
	background: #0078d7;
	color: white;
	transition: .5s;
}
iframe{
	display: none;
}